            <a href="#">Forgot Password ?</a>
          </div>
          <button type="submit" class="btn btn-warning w-100">Log in</button>
          <div class="create-account">
            <span>Don't have an account? <a href="#" class="regist-link">Register</a></span>
          </div>
        </form>
        <form action="/register" method="post" class="regist-form">
          <h2 class="text-primary">Register</h2>
          <div class="input-box">
            <input type="text" name="username" required>
            <label>Username</label>
            <i class="fa-solid fa-user"></i>
          </div>
          <div class="input-box">
            <input type="email" name="email" required>
            <label>Email</label>
            <i class="fa-solid fa-envelope"></i>
          </div>
          <div class="input-box">
            <input type="password" name="password" required>
            <label>Password</label>
            <i class="fa-solid fa-lock"></i>
          </div>
          <button class="btn btn-warning w-100" type="submit">Sign Up</button>
          <div class="create-account">
            <span>Have an account? <a href="#" class="login-link">Log in</a></span>
          </div>
